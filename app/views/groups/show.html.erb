
<%= render 'groups_show_card',
  group: @group,
  name: @group.name,
  image_url: @group.image_url
%>

<script>
  window.addEventListener('scroll', () => {
    const scrollContainer = document.getElementById('reptileScroll');
    const footer = document.querySelector('.footer-bar');
    if (!scrollContainer || !footer) return;

    const footerTop = footer.getBoundingClientRect().top;
    const windowHeight = window.innerHeight;

    // If footer is visible in viewport, fix the container above footer
    if (footerTop < windowHeight) {
      scrollContainer.classList.add('fixed');
    } else {
      scrollContainer.classList.remove('fixed');
    }
  });
</script>
