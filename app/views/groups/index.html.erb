    /* Scrollable container with fixed height */
.group-card-wrapper {
  background-image: linear-gradient(to bottom left, #9931e1, #491fda);
  background-size: cover;
  background-position: center;
  border-radius: 20px;
  padding: 20px;
  box-shadow: 0 4px 15px rgba(73, 31, 218, 0.3);
  width: 500px;          /* smaller width to pull container left */
  height: 70vh;
  margin-left: 2;        /* align left */
  margin-right: auto;    /* push margin right auto */
  display: flex;
  flex-direction: column;
  position: relative;
  gap: 20px;
  overflow: hidden;
}

.group-card-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    background-color: rgba(178, 148, 234, 0.4); /* $light-purple with 40% opacity */
    z-index: 0;
    pointer-events: none; /* ensures overlay doesn't block clicks */
  }

  /* Ensure content stays above the overlay */
  .group-card-wrapper > * {
    position: relative;
    z-index: 1;
  }

.event-scroll-container-vertical {
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  scroll-snap-type: y mandatory;
  -webkit-overflow-scrolling: touch;
  gap: 20px;
  padding: 0 16px 0 16px; /* horizontal padding to prevent touching edges */
  height: 100%;
  width: 100%;
  align-items: center;
  box-sizing: border-box; /* include padding in width */
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.event-scroll-container-vertical::-webkit-scrollbar {
  display: none;
}

.event-card-vertical {
  scroll-snap-align: start;
  background-image: url('https://images.unsplash.com/photo-1517935706615-2717063c2225?auto=format&fit=crop&w=600&q=80');
  background-size: cover;
  background-position: center;
  border-radius: 20px;
  padding: 30px;
  box-shadow: 0 6px 20px rgba(73, 31, 218, 0.3);
  width: 100%;
  max-width: 480px;
  height: 180px;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  font-weight: 700;
  font-size: 1.4rem;
  text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
  cursor: pointer;
  user-select: none;
  transition: transform 0.3s ease;
}

.event-card-vertical:hover {
  transform: scale(1.05);
}

.event-card-vertical p {
  margin: 0;
  padding-bottom: 5px;
}




