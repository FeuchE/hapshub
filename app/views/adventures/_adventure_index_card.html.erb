<div class='card-wrapper'>
  <div class= "adventure_index_card_container d-flex">
    <div
      class="adventure-image"
      style="background-image: url('<%= "https://places.googleapis.com/v1/#{adventure.photo_resource}/media?maxHeightPx=400&maxWidthPx=400&key=#{ENV["GOOGLE_API_KEY"]}" %>');">
    </div>
    <div class='adventure-index-text'>
      <h3><%= link_to name, event_adventure_path(adventure.event,adventure) %><h3>
      <p><%= truncate(description, length: 100) %></p>
      <p><%= link_to 'Choose adventure', event_adventure_path(event, adventure), data: {turbo_method: :patch}, class:"btn btn-primary rounded-5" %>
    </div>
  </div>
</div>
