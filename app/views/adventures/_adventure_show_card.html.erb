<div class='card-wrapper'>
  <div class="adventure-card d-flex">
    <h2><%= name %>

    <div class="adventure-image">
      <img src="<%= "https://places.googleapis.com/v1/#{adventure.photo_resource}/media?maxHeightPx=400&maxWidthPx=400&key=#{ENV["GOOGLE_API_KEY"]}" %>">
    </div>

    <div class="adventure-text">
      <p><%= description %>
      <p><strong>Location: </strong> <%= location %></p>
    </div>
  </div>
</div>
