<!-- FullCalendar CSS and JS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

<style>
  body {
    margin: 0;
    font-family: sans-serif;
    /* padding-top: 60px; Adjust this if your navbar is taller/shorter */
    background-color: #fbf7ea;
    color: #491fda;
  }

  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 0;
    margin-top: 0;
  }

  .event-section {
    width: 100%;
    max-width: 520px;
    margin-top: 6px;
    position: relative;
  }

  .intro-section {
    background-color: #ffffff;
    padding: 16px 16px 12px 16px;
    margin-top: 20px;
    margin-bottom: 10px;
    border-radius: 16px;
    box-shadow: 0 4px 12px rgba(73, 31, 218, 0.08);
  }

  .intro-section h1 {
    font-size: 1.25rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 8px;
  }

  .intro-section .lead,
  .intro-section .text-muted {
    font-size: 0.95rem;
    text-align: center;
    margin: 4px 0;
  }

  .calendar-events-card {
    background-image: url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80');
    background-size: cover;
    background-position: center;
    border-radius: 20px;
    padding: 12px;
    box-shadow: 0 4px 15px rgba(73, 31, 218, 0.3);
    display: flex;
    flex-direction: column;
    gap: 12px;
    position: relative;
  }

  .event-heading {
    font-size: 1.4rem;
    margin-bottom: 8px;
    color: #6a2fd7;
    font-weight: 700;
    text-align: center;
  }

  #calendarToggle {
    cursor: pointer;
    background-color: #6a2fd7;
    color: white;
    border: none;
    padding: 6px 16px;
    font-weight: 600;
    border-radius: 30px;
    text-align: center;
    margin: 0 auto 8px auto;
    display: block;
    width: max-content;
    user-select: none;
  }

  .calendar-dropdown {
    display: none;
    position: absolute;
    top: 58px;
    left: 12px;
    right: 12px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(73, 31, 218, 0.3);
    z-index: 1000;
    max-height: 350px;
    overflow-y: auto;
    min-height: 320px;
  }

  #calendar {
    width: 100%;
    height: 320px;
  }

  .fc .fc-daygrid-day {
    min-width: 30px !important;
    width: 30px !important;
    height: 30px !important;
    min-height: 30px !important;
    padding: 2px !important;
    border: 1px solid #ddd;
    box-sizing: border-box;
  }

  .fc .fc-col-header {
    position: relative;
    background-color: #fff;
    font-size: 0.7rem !important;
    padding: 2px !important;
    height: 20px !important;
    line-height: 1.1 !important;
  }

  .fc .fc-daygrid-day-top {
    font-size: 0.55rem !important;
    line-height: 1 !important;
    padding: 0 2px !important;
    margin-bottom: 0 !important;
    height: 12px !important;
    overflow: hidden;
  }

  .fc .fc-daygrid-event {
    font-size: 0.5rem !important;
    padding: 0 2px !important;
    line-height: 1 !important;
    max-height: 12px !important;
    overflow: hidden;
  }

  .fc .fc-toolbar-title {
    font-size: 1rem !important;
    text-align: center;
    margin: 10px 0 auto;
  }

  .fc-event:hover {
    background-color: #a88beb !important;
    cursor: pointer;
  }

  .event-scroll-container {
    display: flex;
    overflow-x: auto;
    gap: 8px;
    padding: 0 4px;
  }

  .event-scroll-container::-webkit-scrollbar {
    display: none;
  }

  .event-card {
    flex: 0 0 auto;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    width: 130px;
    box-shadow: 0 2px 10px rgba(73, 31, 218, 0.2);
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
  }

  .event-card:hover {
    background-color: #9931e1;
    color: white;
  }

  .event-card img {
    width: 100%;
    height: 100px;
    object-fit: cover;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    display: block;
  }

  .event-card p {
    font-weight: 700;
    font-size: 20px;
    margin: 6px;
    text-align: center;
  }

  .text-muted {
    font-size: 0.8rem;
    text-align: center;
  }

  .text-center {
    text-align: center;
  }

  .btn-primary {
    background-color: #6a2fd7;
    border-color: #6a2fd7;
    color: white;
    padding: 6px 14px;
    font-weight: 600;
    border-radius: 30px;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
    margin-top: 8px;
  }

  .btn-primary:hover {
    background-color: #4a1ea3;
    border-color: #4a1ea3;
    color: white;
  }

  @media (max-width: 420px) {
    .intro-section h1 {
      font-size: 1rem;
    }

    .intro-section .lead,
    .intro-section .text-muted {
      font-size: 0.8rem;
    }

    .event-card {
      width: 110px;
    }

    .event-card img {
      height: 90px;
    }

    /* .event-card p {
      /* font-size: 0.75rem; */
    /* } */

    .fc .fc-toolbar-title {
      font-size: 0.85rem !important;
    }

    .fc .fc-daygrid-day-top {
      font-size: 0.55rem !important;
    }
  }
</style>

<main>
  <section class="intro-section">
    <h1>HapsHub</h1>
    <h2>For groups of people with varied schedules, but shared passions!</h2>
    <p class="lead">Keep track of your upcoming events, plan events, and discover new adventures â€” all in one place.</p>
  </section>

  <section class="event-section">
    <div class="calendar-events-card">
      <h2 class="event-heading">Your Upcoming Events</h2>

      <!-- Toggle button for calendar dropdown -->
      <button id="calendarToggle" aria-expanded="false" aria-controls="calendarDropdown">Show Calendar</button>

      <!-- Dropdown container for calendar -->
      <div id="calendarDropdown" class="calendar-dropdown" aria-hidden="true">
        <div id="calendar"></div>
      </div>

      <!-- Scrollable Upcoming Events -->
      <div class="event-scroll-container">
        <% if @upcoming_events.any? %>
          <% @upcoming_events.each do |event| %>
            <%= link_to event_path(event), class: "event-card-link" do %>
              <div class="event-card">
                <% if event.adventure.present? %>
                  <img src="<%= "https://places.googleapis.com/v1/#{event.adventure.photo_resource}/media?maxHeightPx=400&maxWidthPx=400&key=#{ENV["GOOGLE_API_KEY"]}" %>" alt="<%= event.adventure.name %>">
                  <p><%= event.adventure.name %></p>
                <% else %>
                  <img src="<%= asset_path "category_images/#{event.category}.jpg" %>" alt="<%= event.location %>">
                  <p><%= event.location %></p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <p class="text-muted">No upcoming events yet.</p>
        <% end %>
      </div>

      <div class="text-center">
        <%= link_to "View All Events", events_path, class: "btn-primary" %>
      </div>
    </div>
  </section>
</main>

<script>
  let calendar = null;
  let calendarToggle = null;
  let calendarDropdown = null;

  function initializeCalendar() {
    const calendarEl = document.getElementById('calendar');
    calendarToggle = document.getElementById('calendarToggle');
    calendarDropdown = document.getElementById('calendarDropdown');
    if (!calendarEl || !calendarToggle || !calendarDropdown) return;

    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;

    if (calendar) {
      calendar.destroy();
      calendar = null;
    }

    calendarDropdown.style.display = 'none';
    calendarDropdown.setAttribute('aria-hidden', 'true');
    calendarToggle.textContent = 'Show Calendar';
    calendarToggle.setAttribute('aria-expanded', 'false');

    calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      eventSources: [
        {
          url: '/events.json',
          method: 'GET',
          extraHeaders: {
            'X-CSRF-Token': csrfToken,
            'Accept': 'application/json'
          },
          failure() {
            alert('There was an error while fetching events!');
          }
        }
      ],
      height: 'auto',
      eventColor: '#6a2fd7',
      headerToolbar: {
        left: '',
        center: 'title',
        right: ''
      }
    });

    calendar.render();

    const newToggle = calendarToggle.cloneNode(true);
    calendarToggle.parentNode.replaceChild(newToggle, calendarToggle);
    calendarToggle = newToggle;

    calendarToggle.addEventListener('click', () => {
      const isHidden = calendarDropdown.style.display === 'none' || calendarDropdown.style.display === '';
      if (isHidden) {
        calendarDropdown.style.display = 'block';
        calendarDropdown.setAttribute('aria-hidden', 'false');
        calendarToggle.textContent = 'Hide Calendar';
        calendarToggle.setAttribute('aria-expanded', 'true');
        setTimeout(() => calendar.updateSize(), 10);
      } else {
        calendarDropdown.style.display = 'none';
        calendarDropdown.setAttribute('aria-hidden', 'true');
        calendarToggle.textContent = 'Show Calendar';
        calendarToggle.setAttribute('aria-expanded', 'false');
      }
    });

    document.addEventListener('click', (event) => {
      if (
        calendarDropdown.style.display === 'block' &&
        !calendarDropdown.contains(event.target) &&
        event.target !== calendarToggle
      ) {
        calendarDropdown.style.display = 'none';
        calendarDropdown.setAttribute('aria-hidden', 'true');
        calendarToggle.textContent = 'Show Calendar';
        calendarToggle.setAttribute('aria-expanded', 'false');
      }
    });
  }

  document.addEventListener('turbo:load', initializeCalendar);
</script>
